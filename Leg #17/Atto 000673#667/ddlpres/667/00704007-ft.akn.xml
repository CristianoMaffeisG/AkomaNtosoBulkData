		<an:body title="DISEGNO DI LEGGE">
			<an:article id="w1ab1ab3b1">
				<an:num>Art. 1.</an:num>
				<an:heading id="w1ab1ab3b1b1">
					<an:i>
						(Abrogazione dell'articolo 278
						<an:eol/>
						del codice penale)
					</an:i>
				</an:heading>
				<an:paragraph id="w1ab1ab3b1b2">
					<an:num>1. </an:num>
					<an:content id="w1ab1ab3b1b2b1">
						<an:p>L'articolo 278 del codice penale è abrogato.</an:p>
					</an:content>
				</an:paragraph>
			</an:article>
			<an:article id="w1ab1ab3b2">
				<an:num>Art. 2.</an:num>
				<an:heading id="w1ab1ab3b2b1">
					<an:i>(Ulteriori abrogazioni)</an:i>
				</an:heading>
				<an:paragraph id="w1ab1ab3b2b2">
					<an:num>1. </an:num>
					<an:list id="w1ab1ab3b2b2a">
						<an:intro id="w1ab1ab3b2b2b1">
							<an:p>Al codice penale sono apportate le seguenti modificazioni:</an:p>
						</an:intro>
						<an:point id="w1ab1ab3b2b2b2">
							<an:num>
								<an:i>a) </an:i>
							</an:num>
							<an:content id="w1ab1ab3b2b2b2b1">
								<an:p>
									all'articolo 290-
									<an:i>bis</an:i>
									, la parola: «278,» è soppressa;
								</an:p>
							</an:content>
						</an:point>
						<an:point id="w1ab1ab3b2b2b3">
							<an:num>
								<an:i>b) </an:i>
							</an:num>
							<an:content id="w1ab1ab3b2b2b3b1">
								<an:p>all'articolo 301, primo comma, la parola: «278,» è soppressa;</an:p>
							</an:content>
						</an:point>
						<an:point id="w1ab1ab3b2b2b4">
							<an:num>
								<an:i>c) </an:i>
							</an:num>
							<an:content id="w1ab1ab3b2b2b4b1">
								<an:p>all'articolo 313, primo comma, la parola: «278,» è soppressa.</an:p>
							</an:content>
						</an:point>
					</an:list>
				</an:paragraph>
			</an:article>
