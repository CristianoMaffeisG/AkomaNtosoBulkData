					<an:references source="#redattore">
						<an:original href="http://dati.senato.it/osr/Ddl/2013-10-16/54-A/R/ita@/main/relazione" id="ro2" showAs="Relazione"/>
						<an:attachmentOf href="http://dati.senato.it/osr/Ddl/2013-10-16/54-A/R/ita@/main" id="mainAnx2" showAs="Main"/>
					</an:references>
