				<an:docProponent as="#tipoSenatore" refersTo="#ID0OIRPDAR0GCJMVM1NVRK55GYJFZQOF25YXFHEXEEDAJ0YTTVOVW">D'AMBROSIO LETTIERI</an:docProponent>
